    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    
    main {
      display: flex;
      flex: 1;
    }
    
    article {
      flex: 1;
    }
    
    nav,
    aside {
      /* 12em is the width of the side columns */
      flex: 0 0 12em;
    }
    
    body {
        padding: 0;
        margin: 0;
      }
      header,
      nav,
      article,
      aside,
      footer {
        padding: 5px;
      }
      header {
        background-color: fuchsia;
      }
      nav {
        background-color: fuchsia;
      }
      article {
        background-color: fuchsia;
      }
      aside {
        background-color: fuchsia;
      }
      footer {
        background-color: fuchsia;
      }
    